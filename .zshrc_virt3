# Path to oh-my-zsh installation.
export ZSH=~/.oh-my-zsh

# Set history config
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000000

# Theme
ZSH_THEME="fishy"

# Ignore duplicate lines in history
setopt HIST_IGNORE_DUPS

# Allow autocompletion of alias switches
setopt completealiases

# Autocorrect commands
ENABLE_CORRECTION="true"

# Select which plugins to load
plugins=(sudo tmux web-search history zsh-completions autojump common-aliases docker rand-quote systemd)

# Set path
export PATH="/usr/lib/ccache:/usr/local/bin:/usr/bin:/bin:/usr/games"

# Source config file
source $ZSH/oh-my-zsh.sh

# Set language environment
export LANG=en_US.UTF-8

# Correct improperly entered commands
eval "$(thefuck --alias nope)"

# Enable command completion
autoload -U compinit
compinit

# Allow arrow key control of completions
zstyle ':completion:*' menu select

# Find any new executables in path
zstyle ':completion:*' rehash true

# Preferred editor for local (vim) and remote (nano) sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='nano'
else
  export EDITOR='vim'
fi

# Aliases
alias ls='ls --color'
alias vim="stty stop '' -ixoff ; vim"
alias lxc-kill='for i in $(lxc list | cut -d "|" -f 2 | grep -v "+" | grep -v "NAME"); do lxc delete $i --force; done'
alias docker-kill='for i in $(docker ps | grep "Up" | cut -d " " -f1); do docker stop $i; done'
alias webshell='gotty --title-format "/dev/random" -w docker run -it -m 128M --memory-swap -1 --rm ubuntu'

# Enable syntax highlighting
source ~/.oh-my-zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets)
